<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>








    <style name="tabhome" parent="Theme.AppCompat">
        <item name="android:background">@drawable/shape</item>
    </style>
    <style name= "tab_home" parent="Theme.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15dp</item>
        <item name="android:padding">0dp</item>

    </style>
    <style name= "tab_home2" parent="Theme.AppCompat">
        <item name="android:gravity">center</item>


        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name= "asktab" parent="Theme.AppCompat">
        <item name="android:textColor">#B1BAB7  </item>
        <item name="android:gravity">center</item>
       <item name="android:textSize">10dp</item>
       <item name="android:padding">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
<style name="post" parent="Theme.AppCompat">
    <item name="android:textSize">16dp</item>
    <item name="android:textStyle">italic</item>
    <item name="android:layout_margin">8dp</item>
    <item name="android:padding">8dp</item>
</style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
